{
  "name" : "grafana",
  "version" : "7.0.6",
  "description" : "Plugin for running Grafana inside Thinger.io",
  "author" : "Alvaro Luis Bustamante",
  "license" : "MIT",
  "repository" : {
    "type" : "git",
    "url" : "https://github.com/thinger-io/grafana-plugin.git"
  },
  "metadata" : {
    "name" : "Grafana",
    "description" : "Grafana integration for Thinger.io",
    "image" : "https://upload.wikimedia.org/wikipedia/en/thumb/a/a1/Grafana_logo.svg/1200px-Grafana_logo.svg.png",
    "icon" : "https://exchange.icinga.com/cark/Grafana%20Module/logo"
  },
  "tokens" : {
  },
  "task" : {
    "type" : "docker",
    "image" : "thinger/grafana-plugin",
    "volumes" : {
      "data" : "/var/lib/grafana"
    },
    "env" : {
      "GF_SERVER_DOMAIN" : "${THINGER_HOST}",
      "GF_SERVER_ROOT_URL": "https://${THINGER_HOST}/users/${THINGER_USER}/plugins/${THINGER_PLUGIN}:3000/",
      "GF_SERVER_SERVE_FROM_SUB_PATH" : "true"
    }
  },
  "interface" : {
    "main" : {
      "proxy_to" : {
        "plugin" : "grafana",
        "port" : 3000
      }
    }
  }
}
